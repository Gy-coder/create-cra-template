{
  "name": "make-cra-template",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/templates/*"
  ],
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.2.0",
    "lerna": "^4.0.0",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "new-version": "lerna version --conventional-commits",
    "publish": "lerna publish",
    "build:mct": "lerna run build --scope make-cra-template",
    "build:templates": "lerna exec mct --scope cra-template-*",
    "build": "yarn build:mct && yarn build:templates",
    "start:mct": "lerna run start --scope make-cra-template",
    "start:templates": "chokidar './packages/make-cra-template/build' -c 'yarn run build:templates'",
    "start:app": "./bin/start-app.js",
    "start": "./bin/start.js"
  },
  "dependencies": {
    "execa": "^5.0.1",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.1.0",
    "is-npm": "^5.0.0"
  }
}
